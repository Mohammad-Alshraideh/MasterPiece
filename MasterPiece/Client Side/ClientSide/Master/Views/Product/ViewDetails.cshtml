<!--=============== RELATED PRODUCTS ===============-->
<section class="s-related-products">
    <div class="container">
        <h2 class="title">Related Products</h2>
        <div class="row product-cover">
           @{int count = 0;
               foreach (var item in (List<MasterPieceDb.Models.Product>)@ViewBag.RelatedProducts)
               {
                   if(count < 3)
                   {
                       { Html.RenderPartial("_Product", item); }
                   }
                   else
                   {
                       break;
                   }

                   count++;
               }

               }
        </div>
    </div>
</section>
<!--============= RELATED PRODUCTS END =============-->

