@model MasterPieceDb.Models.Product
 
 
        <div class="col-12 col-sm-4 prod-item-col">
            <div class="product-item">
                @if (Model.AddBadge == true)
                {
                    @*<span class="aa-badge  @Model.OfferBadgeClass" href="#">@Model.OfferTitle</span>*@
                    <span class="sale @Model.OfferBadgeClass">@Model.OfferTitle</span>
                }
                @{
                    TempData["returnURL"] = Request.RawUrl;
                }

            <ul class="product-icon-top">
                <li><a href="@Url.Action("ViewDetails", "Product", new { id = Model.ProductID })" title="View Details" data-toggle="tooltip" data-placement="top"><span class="fa fa-info"></span></a></li>

                <li> <a href="@(Session["username"]!=null ? Url.Action("WishList","Product", new {id=@Model.ProductID }) :Url.Action("Login","Account"))" data-toggle="tooltip" data-placement="top" title="Add to Wishlist"><span class="fa fa-heart"></span></a></li>

 
            </ul>

                <a class="aa-product-img product-img" href="@Url.Action("ViewDetails", "Product", new { id = Model.ProductID })"><img src="~/Content/Images/Main/@Model.Picture1" alt="@Model.AltText"></a>

                <div class="product-item-wrap">
                    <div class="product-item-cover">
                        <div class="price-cover">
                            <div class="new-price">@Model.UnitPrice</div>
                            @if (Model.OldPrice != null)
                            {
                                <div class="old-price"> @Model.OldPrice</div>
                            }

                        </div>
                        <h6 class="prod-title"><a href="single-shop.html">@Model.Name</a></h6>

                        <a class="btn" href="@(Session["username"] != null ? Url.Action("AddToCart", "Product", new { id = @Model.ProductID}) : Url.Action("Login", "Account"))"><span class="fa fa-shopping-cart"></span><span>Add To Cart</span></a>
                    </div>
                    <div class="prod-info">
                        <ul class="prod-list">
                            <li>Frame Size: <span>17</span></li>
                            <li>Class: <span>City</span></li>
                            <li>Number of speeds: <span>7</span></li>
                            <li>Type: <span>Rigid</span></li>
                            <li>Country registration: <span>USA</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
